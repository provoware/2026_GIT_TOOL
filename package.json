{
  "name": "2026-git-tool",
  "version": "0.1.0",
  "description": "Electron base structure with automation and quality checks",
  "main": "src/main.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "start:bootstrap": "bash scripts/start.sh",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "test": "node --test",
    "quality": "npm run lint && npm run format && npm test",
    "quality:fix": "npm run lint:fix && npm run format:write && npm test",
    "quality:auto": "node scripts/quality.mjs"
  },
  "dependencies": {
    "archiver": "^6.0.2"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.9.0",
    "@eslint/js": "^9.9.0",
    "electron": "^32.0.1",
    "eslint": "^9.9.0",
    "playwright": "^1.48.0",
    "prettier": "^3.3.3"
  }
}
